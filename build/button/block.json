{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "blocksmith/button",
  "version": "0.1.0",
  "title": "Button",
  "category": "design",
  "icon": "button",
  "description": "A simple but essential component for adding visual flair and functionality.",
  "example": {},
  "supports": {
    "html": false,
    "color": {
      "__experimentalSkipSerialization": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    }
  },
  "attributes": {
    "content": {
      "type": "string",
      "source": "html"
    },
    "url": {
      "type": "string",
      "default": ""
    },
    "linkTarget": {
      "type": "string",
      "default": ""
    },
    "rel": {
      "type": "string",
      "default": ""
    },
    "textAlign": {
      "type": "string"
    }
  },
  "selectors": {
    "root": ".wp-block-blocksmith-button .wp-block-button__link",
    "color": {
      "text": ".wp-block-blocksmith-button .wp-block-button__link"
    },
    "typography": {
      "writingMode": ".wp-block-blocksmith-button"
    }
  },
  "textdomain": "blocksmith",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}